<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".eventdetails.presentation.EventDetailsActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16x"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_event_details_button_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16x"
            android:background="@drawable/ic_arrow_back"
            android:clickable="true"
            android:focusable="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_logo_white"
            />

        <ImageView
            android:id="@+id/activity_event_details_image_view_to_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/margin_16x"
            android:background="@drawable/ic_activity_event_details_to_favorites_border"
            android:clickable="true"
            android:focusable="true"
            />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/activity_event_details_image_view_speaker_photo"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                tools:background="@drawable/corona2"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_is_invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:layout_marginTop="@dimen/margin_16x"
                android:background="@drawable/bg_text_view_speaker_is_invited"
                android:paddingHorizontal="@dimen/padding_4x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13"
                tools:text="Приглашённый спикер"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:layout_marginTop="@dimen/margin_8x"
                android:padding="@dimen/padding_5x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                tools:text="Кирилл Розов"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_speaker_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:padding="@dimen/padding_5x"
                android:textColor="@color/activity_event_details_speaker_job_text_view"
                android:textSize="@dimen/text_size_13"
                tools:text="Mobile Lead в Replika.ai"
                />

            <View
                style="@style/Divider"
                android:layout_marginTop="@dimen/margin_16x"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_time_and_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:layout_marginTop="@dimen/margin_8x"
                android:padding="@dimen/padding_5x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:text="15:00 - 16:00 • Зал номер 5"
                />

            <View
                style="@style/Divider"
                android:layout_marginTop="@dimen/margin_8x"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:layout_marginTop="@dimen/margin_16x"
                android:layout_marginEnd="@dimen/margin_16x"
                android:lineSpacingExtra="@dimen/line_spacing_extra_8x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18"
                tools:text="Увлекательная жизнь в панели уведомлений"
                />

            <TextView
                android:id="@+id/activity_event_details_text_view_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16x"
                android:layout_marginTop="@dimen/margin_8x"
                android:layout_marginEnd="@dimen/margin_16x"
                android:layout_marginBottom="@dimen/margin_16x"
                android:lineSpacingExtra="@dimen/line_spacing_extra_8x"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:text="Системные уведомления позволяют пользователям получать информацию, не заходя в приложение, и быстрее с ним взаимодействовать.Как использовать все возможности системы уведомлений? Как сделать уведомления в каждой версии ОС и использовать их возможности по максимуму? NotificationCompat не решит все за вас. Обо всем этом поговорим в докладе."
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>