<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16x"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16x"
        app:srcCompat="@drawable/ic_logo_white"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/activity_upcoming_events_text_view_hello_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/activity_upcoming_events_hello_text_view"
        tools:text="Привет, Васян"
        />
</LinearLayout>